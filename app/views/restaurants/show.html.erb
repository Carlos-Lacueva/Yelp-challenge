<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.address %></h2>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<% @restaurant.reviews.each do |review| %>
  <p>
    <%= review.content %>
  </p>
<% end -%>

<h3><%= link_to "Add a review", new_restaurant_review_path(@restaurant)%></h3>
<h3><%= link_to "Back to main page", restaurants_path%></h3>